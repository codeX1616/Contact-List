<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <h1>Contact List</h1>

        <div>
            <ul>
                <% for(let i of contact_list) { %>
                    <li>
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                    </li>
                <% } %>
            </ul>
        </div>
        <form action="/new-contact" method="POST">
            <input type="text" name="name" placeholder="Enter name">
            <input type="number" name="phone" placeholder="Enter phonenumber">

            <button type="submit">Submit</button>
        </form>
    </body>
</html>